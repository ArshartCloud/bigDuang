<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent" android:padding="6px"
    android:layout_height="160px" android:id="@+id/rlt_main"
    android:background="#0fffffff">
    <TextView android:layout_width="wrap_content"
        android:layout_height="wrap_content" android:id="@+id/tv_name"
        android:text="Name"
        android:textColor="#000000"
        android:layout_marginTop="20px"
        android:layout_marginLeft="10px"
        android:textStyle="bold">
    </TextView>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/mark"
        android:textColor="#ea7c40"
        android:layout_below="@+id/tv_name"
        android:layout_marginTop="10px"
        android:layout_marginLeft="10px"
        android:text="mark: 4.4/5"
        android:textSize="20px"
        />
    <TextView android:id="@+id/distance"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:focusable="false"
        android:layout_marginRight="10px"
        android:layout_alignBaseline="@+id/mark"
        android:textColor="#567c6d75"
        android:layout_alignParentRight="true"
        android:textSize="20px"
        android:text="distance">
    </TextView>
    <TextView android:layout_width="wrap_content"
        android:layout_height="wrap_content" android:text="price: $2.60"
        android:id="@+id/price" android:layout_centerVertical="true"
        android:layout_marginLeft="10px"
        android:textColor="#7eeac6"
        android:layout_below="@+id/distance" android:layout_marginTop="10px"></TextView>
</RelativeLayout>